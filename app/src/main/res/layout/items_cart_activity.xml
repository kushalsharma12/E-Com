<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageeee"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher_background"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/itemNameee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="sdfsfsdfsf"
                    android:textSize="24dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:id="@+id/rupee"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/itemNameee"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"

                    />

                <TextView
                    android:id="@+id/itemPriceee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="65"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/itemNameee"
                    app:layout_constraintLeft_toRightOf="@+id/rupee"
                     />

                <TextView
                    android:id="@+id/itemCounttt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="20dp"
                    android:inputType="number"
                    android:text="nnnnnnnnnnnnnn"
                    app:layout_constraintLeft_toRightOf="@+id/itemPriceee"
                    app:layout_constraintTop_toBottomOf="@+id/itemNameee" />

                <ImageButton
                    android:id="@+id/cdelete_item_Btn"
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_baseline_delete_outline_24"
                    android:focusable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>